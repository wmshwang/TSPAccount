<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relay_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y135"
    android:orientation="vertical"
    android:background="@mipmap/title_bar_bg">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x150"
        android:layout_marginRight="@dimen/x150"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/text_White"
        android:textSize="@dimen/x60"
        android:visibility="visible"/>
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="@dimen/x200"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/y65"
            android:background="@drawable/selector_back"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/x20"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/x55"
            android:layout_marginLeft="@dimen/x15"
            android:text=""
            android:textColor="@color/text_White"
            android:gravity="center_vertical"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_right_container"
        android:layout_width="@dimen/x150"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/y85"
            android:background="@drawable/selector_back"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/text_White"
            android:gravity="center_vertical"
            android:textSize="@dimen/x55"
            android:layout_marginLeft="@dimen/x15"
            android:visibility="gone"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y3"
        android:layout_alignParentBottom="true"
        android:background="@color/title_bar_line" />
</RelativeLayout>