<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x450"
        android:layout_marginRight="@dimen/x450"
        android:layout_marginTop="@dimen/y285"
        android:layout_marginBottom="@dimen/y285"
        android:background="@drawable/shape_white_circle">
        <TextView
            android:id="@+id/tv_content1"
            android:layout_above="@+id/re_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x75"
            android:layout_marginRight="@dimen/x75"
            android:layout_marginBottom="@dimen/y55"
            android:layout_marginTop="@dimen/y60"
            android:textColor="@android:color/white"
            android:fontFamily="SourceHanSansCn-Regular"
            android:text=""
            android:textSize="@dimen/x68" />
        <RelativeLayout
            android:layout_above="@+id/re_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/txt_login">
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/re_button"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y145"
            android:orientation="horizontal">
            <Button
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/ok_txt"
                android:gravity="center"
                android:fontFamily="SourceHanSansCn-Regular"
                android:layout_margin="@dimen/x10"
                android:textSize="@dimen/x55"
                android:textColor="@color/txt_color"
                android:textAllCaps="false"
                android:background="@null"/>
            <RelativeLayout
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="@color/txt_login">
            </RelativeLayout>
            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cancel_txt"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/x10"
                android:gravity="center"
                android:textSize="@dimen/x55"
                android:textColor="@color/txt_login"
                android:fontFamily="SourceHanSansCn-Regular"
                android:background="@null"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>