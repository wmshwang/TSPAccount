<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_radius"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/message"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x50"
        android:text="@string/app_name"
        android:fontFamily="SourceHanSansCn-Regular"
        android:textColor="@android:color/white"
        android:paddingTop="@dimen/y40"
        android:paddingBottom="@dimen/y40"
        android:paddingLeft="@dimen/x150"
        android:paddingRight="@dimen/x150" />
</LinearLayout>
