<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.desay_svautomotive.tspaccount.Activities.MyNewsActivity">
    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />
    <LinearLayout
        android:id="@+id/hasData"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/account_background"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@color/new_list_bg">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:scrollbarThumbVertical="@color/txt_color"
                android:scrollbarSize="@dimen/x4"
                android:layout_marginTop="@dimen/y3">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
        <View
            android:layout_width="@dimen/x4"
            android:layout_height="match_parent"
            android:background="@mipmap/news_line"
            android:layout_marginLeft="@dimen/x1"/>
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginBottom="@dimen/y80"
            android:layout_marginTop="@dimen/y55">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/x75">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_White"
                    android:textSize="@dimen/x80"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_White"
                    android:textSize="@dimen/x65"
                    android:layout_marginTop="@dimen/y60"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x25"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <TextView
        android:id="@+id/noData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/x65"
        android:text="@string/no_data"
        android:textColor="@color/txt_color"
        android:gravity="center"/>
</LinearLayout>
